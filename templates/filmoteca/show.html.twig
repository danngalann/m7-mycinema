{% extends 'base.html.twig' %}

{% block title %}Película{% endblock %}

{% block body %}
    <h1>Película</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ filmoteca.id }}</td>
            </tr>
            <tr>
                <th>Título</th>
                <td>{{ filmoteca.title }}</td>
            </tr>
            <tr>
                <th>Año</th>
                <td>{{ filmoteca.year }}</td>
            </tr>
            <tr>
                <th>Sinopsis</th>
                <td>{{ filmoteca.sinopsis }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('filmoteca_index') }}">Volver a la lista</a>

    {% if is_granted("ROLE_ADMIN") %}
    <a href="{{ path('filmoteca_edit', {'id': filmoteca.id}) }}">Editar</a>
    {% endif %}

    {% if is_granted("ROLE_ADMIN") %}
    {{ include('filmoteca/_delete_form.html.twig') }}
    {% endif %}
{% endblock %}
